@model List<VendingMachine.ViewModels.OrderItemViewModel>

@{
    ViewData["Title"] = "Оформление заказа";
}

<div class="container my-5">
    <h2 class="mb-4">Оформление заказа</h2>

    <table class="table align-middle">
        <thead>
            <tr>
                <th>Товар</th>
                <th class="text-center" style="width: 150px;">Количество</th>
                <th class="text-end" style="width: 150px;">Сумма</th>
                <th style="width: 50px;"></th>
            </tr>
        </thead>
        <tbody id="orderItems">
            @foreach (var item in Model)
            {
                <tr data-id="@item.Id" data-price="@item.Price">
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" style="width: 50px; height: 50px; object-fit: contain; margin-right: 15px;">
                            <div>@item.Name</div>
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center align-items-center">
                            <button class="btn btn-outline-secondary btn-sm decrease-btn">-</button>
                            <input type="text" class="form-control text-center mx-2 quantity-input" value="@item.Quantity" style="width: 50px;" readonly>
                            <button class="btn btn-outline-secondary btn-sm increase-btn">+</button>
                        </div>
                    </td>
                    <td class="text-end fw-bold" style="white-space: nowrap;">
                        <span class="item-total">@((item.Price * item.Quantity).ToString())</span> руб.
                    </td>
                    <td class="text-center">
                        <button class="btn btn-link text-danger delete-btn">
                            <i class="bi bi-trash" style="font-size: 1.5rem;"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="/Catalog/Index" class="btn btn-warning">Вернуться</a>
        <div class="d-flex align-items-center gap-3">
            <div class="fw-bold fs-4">Итоговая сумма: <span id="totalPrice">0</span> руб.</div>
            <a href="/Order/Payment" class="btn btn-success btn-lg">Оплата</a>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/order.js" asp-append-version="true"></script>
}

