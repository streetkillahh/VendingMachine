@model List<VendingMachine.ViewModels.OrderItemViewModel>

@{
    ViewData["Title"] = "Оформление заказа";
}

<div class="container my-5">
    <h2 class="mb-4">Оформление заказа</h2>

    <table class="table align-middle">
        <thead>
            <tr>
                <th>Товар</th>
                <th class="text-center" style="width: 150px;">Количество</th>
                <th class="text-end" style="width: 100px;">Цена</th>
                <th style="width: 50px;"></th>
            </tr>
        </thead>
        <tbody id="orderItems">
            @foreach (var item in Model)
            {
                <tr data-id="@item.Id">
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="@item.ImageUrl" alt="@item.Name" style="width: 50px; height: 50px; object-fit: contain; margin-right: 15px;">
                            <div>@item.Name</div>
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center align-items-center">
                            <button class="btn btn-outline-secondary btn-sm decrease-btn">-</button>
                            <input type="text" class="form-control text-center mx-2 quantity-input" value="@item.Quantity" style="width: 50px;" readonly>
                            <button class="btn btn-outline-secondary btn-sm increase-btn">+</button>
                        </div>
                    </td>
                    <td class="text-end fw-bold">
                        <span class="item-price">@item.Price</span> руб.
                    </td>
                    <td class="text-center">
                        <button class="btn btn-link text-danger delete-btn">
                            <i class="bi bi-trash" style="font-size: 1.5rem;"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="/Catalog/Index" class="btn btn-warning">Вернуться</a>
        <div class="d-flex align-items-center gap-3">
            <div class="fw-bold fs-4">Итоговая сумма: <span id="totalPrice">0</span> руб.</div>
            <a href="/Order/Payment" class="btn btn-success btn-lg">Оплата</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateTotalPrice() {
            let total = 0;
            document.querySelectorAll('#orderItems tr').forEach(row => {
                const quantity = parseInt(row.querySelector('.quantity-input').value);
                const price = parseFloat(row.querySelector('.item-price').textContent);
                total += quantity * price;
            });
            document.getElementById('totalPrice').textContent = total.toFixed(0);
            localStorage.setItem('totalPrice', total);
        }

        document.querySelectorAll('.increase-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                const input = this.parentElement.querySelector('.quantity-input');
                input.value = parseInt(input.value) + 1;
                updateTotalPrice();
            });
        });

        document.querySelectorAll('.decrease-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                const input = this.parentElement.querySelector('.quantity-input');
                if (parseInt(input.value) > 1) {
                    input.value = parseInt(input.value) - 1;
                    updateTotalPrice();
                }
            });
        });

        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                const row = this.closest('tr');
                row.remove();
                updateTotalPrice();
            });
        });

        // Начальная загрузка
        updateTotalPrice();
    </script>
}
