@{
    ViewData["Title"] = "Оплата";
}

<div class="container my-5">
    <h2 class="mb-4">Оплата</h2>

    <table class="table align-middle">
        <thead>
            <tr>
                <th>Номинал</th>
                <th class="text-center" style="width: 150px;">Количество</th>
                <th class="text-end" style="width: 100px;">Сумма</th>
            </tr>
        </thead>
        <tbody id="paymentTable">
            @foreach (var coin in new[] { 1, 2, 5, 10 })
            {
                <tr data-value="@coin">
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle border d-flex justify-content-center align-items-center" style="width: 50px; height: 50px; margin-right: 15px; font-weight: bold;">
                                @coin
                            </div>
                            @coin @GetCurrencyForm(coin)
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center align-items-center">
                            <button class="btn btn-outline-secondary btn-sm decrease-btn">-</button>
                            <input type="text" class="form-control text-center mx-2 quantity-input" value="1" style="width: 50px;">
                            <button class="btn btn-outline-secondary btn-sm increase-btn">+</button>
                        </div>
                    </td>
                    <td class="text-end fw-bold">
                        <span class="row-sum">@coin</span> руб.
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="/Order/Checkout" class="btn btn-warning">Вернуться</a>
        <div class="d-flex align-items-center gap-4">
            <div class="fw-bold fs-5">Итоговая сумма: <span id="orderTotal">0</span> руб.</div>
            <div class="fw-bold fs-5">Вы внесли: <span id="insertedAmount" class="text-danger">0</span> руб.</div>
            <form method="post" action="/Order/ConfirmPayment">
                <input type="hidden" id="paidAmountInput" name="paidAmount" value="0" />
                <button id="payButton" class="btn btn-success mt-3" disabled>Оплатить</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/payment.js" asp-append-version="true"></script>
}

@functions {
    public string GetCurrencyForm(int number)
    {
        if (number == 1)
        {
            return "рубль";
        }
        else if (number >= 2 && number <= 4)
        {
            return "рубля";
        }
        else if ((number % 10 == 1) && (number % 100 != 11))
        {
            return "рубль";
        }
        else if ((number % 10 >= 2 && number % 10 <= 4) && !(number % 100 >= 12 && number % 100 <= 14))
        {
            return "рубля";
        }
        else
        {
            return "рублей";
        }
    }
}