@model VendingMachine.Models.PaymentResultViewModel

@{
    ViewData["Title"] = "Успешная оплата";
}

<div class="container my-5">
    <h2 class="text-success mb-4">Оплата прошла успешно!</h2>

    @if (Model != null && Model.Change != null && Model.Change.Any())
    {
        <div class="alert alert-info mt-4">
            <h4>Ваша сдача:</h4>
            <ul class="list-group">
                @foreach (var item in Model.Change.OrderByDescending(c => c.Key))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @item.Key руб.
                        <span class="badge bg-primary rounded-pill">@item.Value шт.</span>
                    </li>
                }
            </ul>
        </div>
    }
    else
    {
        <p class="mt-3">Спасибо за покупку! Сдачи нет.</p>
    }

    <a href="@Url.Action("Index", "Catalog")" class="btn btn-primary mt-4">Вернуться в каталог</a>
</div>
